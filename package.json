{
  "name": "raffi",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "A modern video player",
  "author": {
    "name": "Lantharos",
    "email": "hello@lantharos.com"
  },
  "homepage": "https://lantharos.com/raffi",
  "scripts": {
    "dev": "vite",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_DISABLE_SANDBOX=1 electron .\"",
    "build": "vite build",
    "server:build": "cd ./raffi-server && cross-env GOOS=windows GOARCH=amd64 go build -o ../electron/decoder-windows-amd64.exe . && cross-env GOOS=linux GOARCH=amd64 go build -o ../electron/decoder-x86_64-unknown-linux-gnu .",
    "dist": "npm run server:build && npm run build && electron-builder"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "svelte": "^5.43.5",
    "svelte-check": "^4.3.3",
    "typescript": "~5.9.3",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.lantharos.raffi",
    "productName": "Raffi",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "electron/decoder-*"
    ],
    "extraResources": [
      {
        "from": "electron/decoder-x86_64-unknown-linux-gnu",
        "to": "decoder-x86_64-unknown-linux-gnu"
      },
      {
        "from": "electron/decoder-windows-amd64.exe",
        "to": "decoder-windows-amd64.exe"
      }
    ],
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "build/icons",
      "category": "Video"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "build/icons/512x512.png"
    }
  },
  "dependencies": {
    "@ryuziii/discord-rpc": "^1.0.1-rc.1",
    "@supabase/supabase-js": "^2.83.0",
    "@tailwindcss/vite": "^4.1.17",
    "eventemitter3": "^5.0.1",
    "express": "^5.1.0",
    "hls.js": "^1.6.14",
    "tailwindcss": "^4.1.17"
  }
}