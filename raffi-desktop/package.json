{
  "name": "raffi",
  "private": true,
  "version": "0.4.4",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "A modern video player",
  "author": {
    "name": "Kaleidal",
    "email": "hello@kaleid.al"
  },
  "homepage": "https://raffi.al",
  "scripts": {
    "dev": "vite",
    "electron:dev": "npm run server:build && cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_DISABLE_SANDBOX=1 electron .\"",
    "electron:dev:only": "cross-env ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "vite build",
    "server:build": "node build_binary.cjs",
    "dist": "npm run server:build && npm run build && electron-builder"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.7",
    "@types/node": "^25.2.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "png-to-ico": "^3.0.1",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "al.kaleid.raffi",
    "productName": "Raffi",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "kaleidal",
      "repo": "raffi"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ],
      "icon": "build/icons",
      "category": "Video",
      "extraResources": [
        {
          "from": "electron/decoder-x86_64-unknown-linux-gnu",
          "to": "decoder-x86_64-unknown-linux-gnu"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.video",
      "identity": null,
      "extraResources": [
        {
          "from": "electron/decoder-aarch64-apple-darwin",
          "to": "decoder-aarch64-apple-darwin"
        },
        {
          "from": "electron/decoder-x86_64-apple-darwin",
          "to": "decoder-x86_64-apple-darwin"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "build/icons/icon.ico",
      "extraResources": [
        {
          "from": "electron/decoder-windows-amd64.exe",
          "to": "decoder-windows-amd64.exe"
        }
      ]
    },
    "fileAssociations": [
      {
        "ext": "mp4",
        "name": "Video File",
        "role": "Viewer"
      },
      {
        "ext": "mkv",
        "name": "Video File",
        "role": "Viewer"
      },
      {
        "ext": "avi",
        "name": "Video File",
        "role": "Viewer"
      },
      {
        "ext": "webm",
        "name": "Video File",
        "role": "Viewer"
      },
      {
        "ext": "mov",
        "name": "Video File",
        "role": "Viewer"
      }
    ]
  },
  "dependencies": {
    "@ryuziii/discord-rpc": "^1.0.1-rc.1",
    "@supabase/supabase-js": "^2.95.3",
    "@tailwindcss/vite": "^4.1.18",
    "electron-updater": "^6.7.3",
    "eventemitter3": "^5.0.4",
    "express": "^5.2.1",
    "hls.js": "^1.6.15",
    "lucide-svelte": "^0.563.0",
    "posthog-js": "^1.342.1",
    "tailwindcss": "^4.1.18"
  },
  "trustedDependencies": [
    "core-js",
    "electron",
    "protobufjs"
  ]
}
